{
  "name": "lastcall/mannequin",
  "description": "An open source template viewer",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Rob Bayliss",
      "email": "rob@lastcallmedia.com"
    }
  ],
  "replace": {
    "lastcall/mannequin-core": "self.version",
    "lastcall/mannequin-drupal": "self.version",
    "lastcall/mannequin-html": "self.version",
    "lastcall/mannequin-twig": "self.version"
  },
  "require": {
    "php": ">7.0",
    "symfony/console": "^5.2",
    "symfony/filesystem": "^5.0",
    "symfony/flex": "^1.12",
    "symfony/expression-language": "^5.2",
    "symfony/http-foundation": "^5.2",
    "symfony/asset": "^5.2",
    "symfony/http-kernel": "^5.2",
    "symfony/config": "^5.2",
    "symfony/dependency-injection": "^5.2",
    "symfony/yaml": "^5.2",
    "symfony/event-dispatcher": "^5.2",
    "symfony/process": "^5.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.1",
    "friendsofphp/php-cs-fixer": "^2.3",
    "symfony/phpunit-bridge": "^2.7 || ^3.3",
    "mikey179/vfsstream": "^1.6",
    "symfony/framework-bundle": "^5.2",
    "symfony/dotenv": "^5.2"
  },
  "autoload": {
    "psr-4": {
      "LastCall\\Mannequin\\": "src/"
    },
    "exclude-from-classmap": [
      "src/*/Tests"
    ]
  },
  "scripts": {
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install %PUBLIC_DIR%": "symfony-cmd"
    }
  }
}
